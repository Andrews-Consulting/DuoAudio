<Window x:Class="DuoAudio.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About DuoAudio Application" Height="400" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="DuoAudio Application" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        
        <!-- Version -->
        <TextBlock Grid.Row="1" Text="Version 1.0.0" FontSize="12" Margin="0,0,0,20" Foreground="Gray"/>
        
        <!-- Description -->
        <TextBlock Grid.Row="2" Text="A Windows application that duplicates audio from one output device to another using WASAPI. Useful for sending audio to multiple devices simultaneously." 
                   TextWrapping="Wrap" Margin="0,0,0,20"/>
        
        <!-- Features -->
        <TextBlock Grid.Row="3" Text="Features:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="4" Text="• Duplicate audio from any output device to another&#x0a;• Low-latency audio processing&#x0a;• Bluetooth auto-reconnection support&#x0a;• Adjustable buffer size for latency control&#x0a;• Real-time status monitoring" 
                   TextWrapping="Wrap" Margin="10,0,0,20"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OpenDiagnosticsButton" Content="Open Diagnostics" Width="130" Padding="10,5" Margin="0,0,10,0" Click="OnOpenDiagnosticsClick"/>
            <Button x:Name="CloseButton" Content="Close" Width="80" Padding="10,5" Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>
